                <%= form_for(@user) do |f| %>
                  
                  <%= f.label :user_id %>
                  <%= f.text_field :user_id, class: 'form-control' %>
                  
                  <%= f.label :user_name %>
                  <%= f.text_field :user_name, class: 'form-control' %>
                  
                  <%= f.label :user_email %>
                  <%= f.email_field :user_email, class: 'form-control' %>
                  
                  <%= f.label :permission_level %>
                  <%= f.select :permission_level, User.permission_levels.keys.to_a %>
                  <br>
                  <%= f.label :password %>
                  <%= f.password_field :user_password_digest, class: 'form-control' %>
                  
                  <%= f.label :password_confirmation, "Confirmation" %>
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                  
                  <%= f.submit "Create Account", class: 'btn btn-success btn-wide extra-right-margin' %>
                  <%= link_to "Cancel", users_admin1_path, class: 'btn btn-danger btn-wide' %>
