<!DOCTYPE html>

<head>

</head>

<body>
    <%= render 'layouts/navbar' %>

    <div class='container white-container'>
        <%= render 'layouts/flash_messages' %>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h2>Schedule</h2>
                <p>Select a pickup from the list below to edit. To add a new donation click 'Add New Pickup Day.'</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
                <a href="/schedule/schedule2">
                    <btn class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add New Pickup Day</btn>
                </a>
            </div>
        </div>
        <br />
        
        <!-- Need to make it look nice and build tests-->
        <div class="pagination">
            <div class="col-xs-10 col-xs-offset-1">
                <table class="table table-hover table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Number of Pickups</th>
                            <th>Towns</th>
                        </tr>
                    </thead>
                    <tbody class="days">
                        <%= will_paginate %>
                        <% @days.each do |day| %>
                            <tr onclick="location.href='<%= url_for day %>'" >
                                <td><%=day.date.to_date.strftime('%a %b %d') %></td>
                                <td><%=pluralize(day.number_of_pickups, 'Pickup') %></td>
                                <td><%=day.getTowns.to_s %></td>
                            </tr>
                        <% end %>      
                        <%= will_paginate %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>