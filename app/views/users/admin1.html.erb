<!DOCTYPE html>

<head>
</head>

<body>
   <%= render 'layouts/navbar' %>

    <!-- Begin the main content -->
    <div class='container white-container'>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h2>Users</h2>
                <p>Select a user from the list below to edit. To add a new user click 'Add New User'</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
                <a href="/users/new">
                    <btn class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add New User</btn>
                </a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <!-- Table of users -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Control</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= will_paginate %>
                        <!---Displays each user in a row--->
                        <% @users.each do |user| %>
                        <tr>
                            <!---Each user's name and email link to their edit page--->
                            <td>
                                <%= link_to user.user_name, edit_user_path(user) %>
                            </td>
                            <td>
                                <%= user.user_id %>
                            </td>
                            <td>
                                <%= user.user_email %>
                            </td>
                            <td>
                                <%= link_to "Delete", user, method: :delete,
                                                     data: {confirm: "Are you sure?"} %>
                            </td>
                        </tr>
                        <% end %>
                        <%= will_paginate %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>



</html>
